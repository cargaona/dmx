# Environment variables for mdlgo production deployment

# Application Settings
MDLGO_DEBUG=false
MDLGO_LOG_LEVEL=INFO
MDLGO_CONFIG_DIR=/app/config

# API Settings
MDLGO_CACHE_TTL=3600
MDLGO_RATE_LIMIT_PER_SECOND=5.0
MDLGO_MAX_SEARCH_RESULTS=100

# Deezer Configuration
DEEZER_ARL=your_arl_token_here
DEEZER_QUALITY=320

# Download Settings
DOWNLOAD_DIR=/app/downloads
MAX_CONCURRENT_DOWNLOADS=3

# Security
DISABLE_REAL_APIS=false
ENABLE_SAFETY_CHECKS=true

# Performance
ENABLE_CACHING=true
CACHE_SIZE_LIMIT=1000
CLEANUP_INTERVAL=3600

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=8001

# Database (for future features)
# DB_URL=sqlite:///app/data/mdlgo.db